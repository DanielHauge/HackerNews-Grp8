Vagrant.configure("2") do |config|
  config.vm.box = 'digital_ocean'
  config.vm.box_url = "https://github.com/devopsgroup-io/vagrant-digitalocean/raw/master/box/digital_ocean.box"
  config.ssh.private_key_path = '~/.ssh/id_rsa'
  config.vm.synced_folder ".", "/vagrant", disabled: true
  #
  config.vm.define "HackerNewsWebApp", primary: true do |server|

    server.vm.provider :digital_ocean do |provider|
      provider.ssh_key_name = "Vagrant"
      provider.token = '7c0c7cc33a161798d6f8ae829609c826c8237206a7b19ae7282da8e1cc609248'
      provider.image = 'ubuntu-16-04-x64'
      provider.region = 'fra1'
      provider.size = '512mb'
      provider.privatenetworking = true
    end

    server.vm.hostname = "HackerNewsWebApp"
    server.vm.provision "shell", inline: <<-SHELL
		
		sudo apt-get update
		sudo apt-key adv --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 58118E89F3A912897C070ADBF76221572C52609D
		echo "deb https://apt.dockerproject.org/repo ubuntu-xenial main" | sudo tee /etc/apt/sources.list.d/docker.list
		sudo apt-get update
		apt-cache policy docker-engine
		sudo apt-get install -y docker-engine
		
		sudo chmod 700 ~/.ssh
		sudo echo "ssh-rsa  Animcuil@gmail.com"> ~/.ssh/authorized_keys
		sudo echo "ssh-rsa  Animcuil@gmail.com"> ~/.ssh/authorized_keys
		sudo echo "ssh-rsa  jenkins@JenkinsServer"> ~/.ssh/authorized_keys
		sudo chmod 600 ~/.ssh/authorized_keys
		wget https://raw.githubusercontent.com/DanielHauge/HackerNews-Grp8/master/deploy2.sh
		chmod u+x ./deploy2.sh
		
		
		
    SHELL
  end


end
